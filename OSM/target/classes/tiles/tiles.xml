<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
       
<tiles-definitions>
	<definition name="main" template="/WEB-INF/views/template/body.jsp">
		<put-attribute name="header" value="/WEB-INF/views/template/header.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/template/footer.jsp"/>
	</definition>
	<definition name="/*/*/*" extends="main">
			<put-attribute name="title" value ="{3}"/>
			<put-attribute name="body" value="/WEB-INF/views/{1}/{1}_{2}.jsp"/> 
	</definition>
</tiles-definitions>